{% extends '@CapCommercio/base.html.twig' %}

{% block title %}Me connecter{% endblock %}

{% block body %}
    <div class="text-center">

        <form class="form-signin" method="post" action="{{ path('app_login') }}">
            <img class="mb-4 img-fluid"
                 src="{{ asset('/bundles/capcommercio/cap_logo.jpg') }}"
                 alt="logo" width="120" title="Cap sur Marche">
            <h1 class="h3 mb-3 font-weight-normal">Authentification</h1>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <label for="inputEmail"
                   class="sr-only">Nom d'utilisateur</label>
            <input type="email" name="email" value="{{ last_username }}" id="inputEmail" class="form-control mb-2"
                   placeholder="Votre nom d'utilisateur" required autofocus>
            <label for="inputPassword"
                   class="sr-only">Mot de passe</label>
            <input name="password" type="password" id="inputPassword" class="form-control"
                   placeholder="Mot de passe" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <button class="btn btn-lg btn-primary btn-block"
                    type="submit"><i class="ti ti-sign-in-alt"></i> Me connecter
            </button>
        </form>
    </div>

{% endblock %}
