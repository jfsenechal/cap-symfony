{% extends '@CapCommercio/base.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">{{ orders|length }} bons de commande</h3>

        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row g-3">
                <div class="col">
                    {{ form_row(form.number) }}
                </div>
                <div class="col">
                    {{ form_row(form.name) }}
                </div>
                <div class="col">
                    {{ form_row(form.year) }}
                </div>
                <div class="col">
                    {{ form_row(form.paid) }}
                </div>
            </div>
            <button type="submit" name="search" class="btn btn-primary">
                <i class="fa fa-search"></i> Rechercher
            </button>
            {{ form_end(form) }}

            <table class="table table-bordered mt-3">
                <tr>
                    <th>Numéro</th>
                    <th>Commerce</th>
                    <th>Au nom de</th>
                    <th>Crée le</th>
                    <th>Montant TVAC</th>
                    <th>Payé ?</th>
                </tr>
                {% for order in orders %}
                    <tr>
                        <td>
                            <a href="{{ path('cap_order_show', {'id': order.id}) }}">{{ order.orderNumber }}</a>
                        </td>
                        <td>
                            <a href="{{ path('cap_commercant_show', {'id': order.orderCommercant.id}) }}">
                                {{ order.orderCommercant.companyName }}
                            </a>
                        </td>
                        <td>
                            {{ order.orderCommercant.firstname }} {{ order.orderCommercant.lastname }}
                        </td>
                        <td>{{ order.insertDate|format_date('full') }}</td>
                        <td>{{ order.priceVat|format_currency('euro') }}</td>
                        <td>
                            {% if order.bill %}
                                <a href="{{ path('cap_bill_show', {'id': order.bill.id}) }}">
                                    {{ order.bill.billNumber }}
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}

