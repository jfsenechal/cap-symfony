{% extends '@CapCommercio/base.html.twig' %}

{% block body %}
    <div class="card">
        <h3 class="card-header">{{ template.name }}</h3>

        <div class="card-body">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_row(form.code) }}
            <button class="btn btn-primary"><i class="fa fa-save"></i> Sauvegarder</button>
            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}

