{% extends '@CapCommercio/base_public.html.twig' %}

{% block body %}

    <div class="card">
        <h3 class="card-header">Paiement de la facture: <strong>{{ walletOrder.customerTrns }}</strong></h3>

        <div class="card-body">
            <h4 class="text-success">Rappel des informations</h4>
            <table class="table table-bordered">
                <tr>
                    <th>Date</th>
                    <td>{{ paymentOrder.insertDate|format_date('full') }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ orderCommercant.firstname }} {{ orderCommercant.lastname }}</td>
                </tr>
                <tr>
                    <th>Société</th>
                    <td>{{ orderCommercant.companyName }}</td>
                </tr>
                <tr>
                    <th>Courriel</th>
                    <td>{{ orderCommercant.email }}</td>
                </tr>
                <tr>
                    <th>Numéro de Tva</th>
                    <td>{{ orderCommercant.companyVat }}</td>
                </tr>
                <tr>
                    <th>Tva appliqué</th>
                    <td>{{ paymentOrder.vat }}%</td>
                </tr>
                <tr>
                    <th>Montant de la Tva</th>
                    <td>{{ paymentOrder.vatAmount|format_currency('euro') }}</td>
                </tr>
                <tr>
                    <th>Prix tva comprise</th>
                    <td>{{ paymentOrder.priceVat|format_currency('euro') }}</td>
                </tr>
            </table>
            {% if bill is null %}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <button class="btn btn-primary"><i class="ti ti-currency-euro"></i> Payer ma facture en ligne</button>
                {{ form_end(form) }}
            {% endif %}

            <br/><br/>
            <h4 class="text-success">Paiement avec</h4>
            <img src="{{ asset('bundles/capcommercio/logo_wallet-dark.svg') }}" title="Paiement en ligne" alt="logo">
            <div class="row">
                <div class="col-3">
                    <img src="https://cap.marche.be/templates/commercio/resources/logoHome1.png" alt="logo marche">
                </div>
                <div class="col-3">
                    <img src="https://cap.marche.be/templates/commercio/resources/wholeLogo.png" alt="logo cap">
                </div>
            </div>
        </div>
    </div>

{% endblock %}

