{% extends '@CapCommercio/base.html.twig' %}

{% block body %}
    <div class="card">
        <h3 class="card-header">{{ users|length }} utilisateurs</h3>
        <div class="card-body">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row g-3">
            <div class="col">
                {{ form_row(form.name) }}
            </div>
        </div>
        <button type="submit" name="search" class="btn btn-primary">
            <i class="fa fa-search"></i> Rechercher
        </button>
        {{ form_end(form) }}
            <table class="table table-bordered mt-3">
                <tr>
                    <th>Email</th>
                    <th>Date</th>
                </tr>
                {% for user in users %}
                    <tr>
                        <td>
                            <a href="{{ path('cap_user_show', {'id': user.id}) }}">{{ user.email }}</a>
                        </td>
                        <td>
                            {{ user.modifyDate|format_date('full') }}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
