{% extends '@CapCommercio/base.html.twig' %}

{% block body %}
    <div class="card">
        <h3 class="card-header">{{ commercants|length }} Commer√ßants</h3>

        <div class="card-body">

            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row g-3">
                <div class="col">
                    {{ form_row(form.name) }}
                </div>
                <div class="col">
                    {{ form_row(form.isMember) }}
                </div>
            </div>
            <button type="submit" name="search" class="btn btn-primary">
                <i class="fa fa-search"></i> Rechercher
            </button>
            {{ form_end(form) }}

            <table class="table table-bordered mt-3">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>LegalEntity</th>
                    <th>IsMember</th>
                    <th>AffiliationDate</th>
                    <th>LegalPhone</th>
                    <th>LegalFirstname</th>
                    <th>LegalLastname</th>
                </tr>
                </thead>
                <tbody>
                {% for commercant in commercants %}
                    <tr>
                        <td>{{ commercant.id }}</td>
                        <td>
                            <a href="{{ path('cap_commercant_show', {'id': commercant.id}) }}">
                                {{ commercant.legalEntity }}
                            </a>
                        </td>
                        <td>{{ commercant.isMember ? 'Yes' : 'No' }}</td>
                        <td>{{ commercant.affiliationDate ? commercant.affiliationDate|format_date('short') : '' }}</td>
                        <td>{{ commercant.legalPhone }}</td>
                        <td>{{ commercant.legalFirstname }}</td>
                        <td>{{ commercant.legalLastname }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}
