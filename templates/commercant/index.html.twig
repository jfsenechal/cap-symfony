{% extends '@CapCommercio/base.html.twig' %}

{% block body %}
    <div class="card">
        <h3 class="card-header">{{ commercants|length }} Commer√ßants</h3>

        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>LegalEntity</th>
                    <th>VatNumber</th>
                    <th>Phone</th>
                    <th>IsMember</th>
                    <th>AffiliationDate</th>
                    <th>Archived</th>
                    <th>ModifyDate</th>
                    <th>StripeUserRef</th>
                    <th>LegalPhone</th>
                    <th>LegalFirstname</th>
                    <th>LegalLastname</th>
                </tr>
                </thead>
                <tbody>
                {% for commercant in commercants %}
                    <tr>
                        <td>{{ commercant.id }}</td>
                        <td>
                            <a href="{{ path('cap_commercant_show', {'id': commercant.id}) }}">
                                {{ commercant.legalEntity }}
                            </a>
                        </td>
                        <td>{{ commercant.vatNumber }}</td>
                        <td>{{ commercant.phone }}</td>
                        <td>{{ commercant.isMember ? 'Yes' : 'No' }}</td>
                        <td>{{ commercant.affiliationDate ? commercant.affiliationDate|format_date('short') : '' }}</td>
                        <td>{{ commercant.archived ? 'Yes' : 'No' }}</td>
                        <td>{{ commercant.modifyDate ? commercant.modifyDate|format_date('short') : '' }}</td>
                        <td>{{ commercant.stripeUserRef }}</td>
                        <td>{{ commercant.legalPhone }}</td>
                        <td>{{ commercant.legalFirstname }}</td>
                        <td>{{ commercant.legalLastname }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

{% endblock %}
