<!doctype html>
<html lang="fr" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Cap{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('bundles/capcommercio/favicon.png') }}"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/tabler-icons.min.css" />
    <meta name="description" content="">
    <meta name="author" content="Cst">

    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_script_tags('app') }}

    {% block stylesheets %}{% endblock %}

    <meta name="theme-color" content="#563d7c">
    {% block head %}{% endblock %}
</head>
<body class="d-flex flex-column h-100 {% block body_class %}{% endblock %}">
<!-- Top nav bar -->
<nav class="navbar navbar-expand-lg {% if is_granted('IS_IMPERSONATOR') %}
    navbar-dark bg-dark
    {% else %}navbar-light bg-light
{% endif %} fixed-to2p shadow-sm border-bottom d-print-none">
    <div class="container">
        {% block brand %}
            <a class="navbar-brand" href="{{ path('cap_home') }}">
                <i class="fa-solid fa-store d-inline-block align-text-top" style="color: hotpink;"></i>
                <span class="ms-2 fs-4 navbar-text">Cap</span>
            </a>
        {% endblock %}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li class="nav-item">
                        <a href="{{ path('cap_member_index') }}" class="nav-link">
                            Les membres
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('cap_commercant_index') }}" class="nav-link">
                            Les commerçants
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('cap_bill_all') }}" class="nav-link">
                            Les factures
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('cap_order_all') }}" class="nav-link">
                            Les bons de commande
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('cap_blog_post_index') }}" class="nav-link">
                            Les articles
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('cap_news_index') }}" class="nav-link">
                            Les news
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="ti ti-ellipsis-v"></i> <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="{{ path('cap_blog_tag_index') }}" class="dropdown-item">Les tags</a>
                            </li>
                            <li>
                                <a href="{{ path('cap_blog_category_index') }}" class="dropdown-item">Les catégories</a>
                            </li>
                            <li>
                                <a href="{{ path('cap_user_index') }}" class="dropdown-item">Les utilisateurs</a>
                            </li>
                            <li>
                                <a href="{{ path('cap_holiday_index') }}" class="dropdown-item">Les congés</a>
                            </li>
                            <li>
                                <a href="{{ path('cap_access_demand') }}" class="dropdown-item">Demande mdp</a>
                            </li>
                            <li>
                                <a href="{{ path('cap_checkup_index') }}" class="dropdown-item">Checkup</a>
                            </li>
                            <li>
                                <a href="{{ path('stripe_home') }}" class="dropdown-item">Stripe</a>
                            </li>
                            <li>
                                <a href="{{ path('cap_mandrill_index') }}" class="dropdown-item">
                                    Mandrill
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('cap_setting') }}" class="dropdown-item">
                                    Settings
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
            <ul class="navbar-nav mb-2 mb-lg-0">
                {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li class="nav-item">
                        <a href="{{ path('cap_home') }}" class="nav-link"><i class="ti ti-sign-in-alt"></i>
                            Se connecter</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('cap_home') }}" class="nav-link">
                            <i class="ti ti-user"></i>
                            Mon compte</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_logout') }}" class="nav-link">
                            <i class="ti ti-sign-out"></i>
                            Quitter</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<!-- Begin page content -->
<main role="main" class="flex-shrink-0">
    <div class="{% block container_class %}container{% endblock %} pt-3">

        {% include '@CapCommercio/_flash_messages.html.twig' %}

        {% block notifications %}

        {% endblock %}

        {% block body %}

        {% endblock %}

    </div>
</main>

<footer class="footer mt-auto py-3">
    <div class="container">
        {% block footer %}
            <span class="text-muted">

            </span>
        {% endblock %}
    </div>
</footer>
{% block javascripts %}{% endblock %}

</body>
</html>
